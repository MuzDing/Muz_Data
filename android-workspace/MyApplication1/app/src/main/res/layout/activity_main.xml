<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muz.myapplication1.MainActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="login"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txt_pwd"
        app:layout_constraintTop_toBottomOf="@+id/txt_pwd"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_pwd"
        android:layout_alignTop="@+id/txt_pwd"
        android:layout_alignRight="@+id/txt_pwd"
        android:layout_alignEnd="@+id/txt_pwd"
        android:layout_marginTop="81dp" />

    <EditText
        android:id="@+id/txt_id"
        android:layout_width="222dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txt_pwd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txt_pwd"
        android:layout_alignEnd="@+id/txt_pwd" />

    <EditText
        android:id="@+id/txt_pwd"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:text="password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_id"
        android:layout_alignLeft="@+id/btn_zhuce"
        android:layout_alignStart="@+id/btn_zhuce" />

    <Button
        android:id="@+id/btn_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:text="zhuce"
        android:layout_alignBaseline="@+id/btn_login"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout >
