package day2;

public class Pascal {
	public static void main(String[] args) {
		getPascal();
	}

	public static void getPascal() {
		int lines = 10;
		int[] a = new int[lines + 1];
		int previous = 1;
		for (int i = 1; i <= lines; i++) {
			for (int j = 1; j <= i; j++) {
				int current = a[j];
				a[j] = previous + current;
				previous = current;
				System.out.print(a[j] + " ");
			}
			System.out.println();
		}
	}
}
