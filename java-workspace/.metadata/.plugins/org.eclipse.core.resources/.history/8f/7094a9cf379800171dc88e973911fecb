package test;

import java.util.Scanner;

public class jisuanqi {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根
		Scanner sc =new Scanner(System.in);
		System.out.println("number one:");
		
		Double num1=sc.nextDouble();
		
		System.out.println("number two");
		Double num2=sc.nextDouble();
		
		System.out.println("输入符号:");
		String temp = sc.nextLine();
		String fuhao = sc.nextLine();
		
		Double num = 0.0;
		System.out.println(fuhao);
		
		if("+".equals(fuhao)){
			num=add(num1,num2);
		}else if("-".equals(fuhao)){
			num = jian(num1,num2);
		}else if("*".equals(fuhao)){
			num = cheng(num1,num2);
		}else if("/".equals(fuhao)){
			num = chu(num1,num2);
		}
		System.out.println(num);
		
	}
	public static Double add(Double num1,Double num2){
		return num1+num2;
	}
	public static Double jian(Double num1,Double num2){
		return num1-num2;
	}
	public static Double cheng(Double num1,Double num2){
		return num1*num2;
	}
	public static Double chu(Double num1,Double num2){
		return num1/num2;
	}

}
